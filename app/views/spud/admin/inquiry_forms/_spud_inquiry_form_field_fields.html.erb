<fieldset class="fields">
	<hr/>
		<div class="form-group">
			<%=f.label :name,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :name, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :field_type,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
		  		<%=f.select :field_type, [["Text Field",0],["Checkbox",1],["Text Area",2],["Dropdown",3]],{}, {:class => "form-control"}%>
		  	</div>


		</div>
		<div class="form-group">
			<%=f.label :placeholder,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :placeholder, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :options,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :options, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :default_value,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :default_value, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :class_name,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :class_name, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :field_order,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :field_order, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :validation_rule,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :validation_rule, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :validation_error_message,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.text_field :validation_error_message, :class => "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :required,:class => "control-label col-sm-4"%>
			<div class="col-sm-8">
				<%=f.check_box :required%>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-8 col-sm-offset-4"><%= link_to_remove_fields "Remove", f %></div>
			
		</div>
	</fieldset>
